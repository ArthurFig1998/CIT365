@page
@model MegaDeskWeb.Pages.DeskQuotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.DeskQuoteId" />
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Depth" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Width" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.SurfaceMaterial.SurfaceMaterialName" class="control-label"></label>
                <select asp-for="DeskQuote.Desk.SurfaceMaterial.SurfaceMaterialName" class="form-control" asp-items="Model.SurfaceMaterialList"></select>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Desk.NumberOfDrawers" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.NumberOfDrawers" type="number" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Shipping.ShippingType" class="control-label"></label>
                <select asp-for="DeskQuote.Shipping.ShippingType" class="form-control" asp-items="Model.ShippingList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
